"use client"

import { useState, useEffect } from "react"
import { Button } from "@/components/ui/button"
import { Card } from "@/components/ui/card"
import { Badge } from "@/components/ui/badge"
import { Sheet, SheetContent, SheetTrigger } from "@/components/ui/sheet"
import { Accordion, AccordionContent, AccordionItem, AccordionTrigger } from "@/components/ui/accordion"
import { Calendar, MapPin, Users, Star, Waves, Camera, Heart, Compass, Fish, Anchor, Menu, Loader2, Phone, Mail, Instagram } from "lucide-react"
import Link from "next/link"
import { useLanguage } from "@/lib/language-context"
import { LanguageSwitcher } from "@/components/language-switcher"
import { getHomeSettings, getFeaturedAccommodations } from "@/lib/laravel-api"

export default function HomePage() {
  const { t } = useLanguage()
  const [mobileMenuOpen, setMobileMenuOpen] = useState(false)
  const [homeSettings, setHomeSettings] = useState<any>(null)
  const [featuredHotels, setFeaturedHotels] = useState<any[]>([])
  const [featuredResorts, setFeaturedResorts] = useState<any[]>([])
  const [pageContent, setPageContent] = useState<any>({})
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)

  useEffect(() => {
    async function fetchHomeData() {
      try {
        setLoading(true)
        console.log('[D\'Mar] Fetching home page data...')
        const [settings, featured, content] = await Promise.all([
          getHomeSettings(),
          getFeaturedAccommodations(),
          fetch('http://localhost:8000/api/v1/page-content').then(res => res.json())
        ])
        console.log('[D\'Mar] Home settings:', settings)
        console.log('[D\'Mar] Featured accommodations:', featured)
        console.log('[D\'Mar] Page content:', content)
        console.log('[D\'Mar] Hero video URL:', settings?.hero_video_url)
        console.log('[D\'Mar] Hero image URL:', settings?.hero_image_url)
        setHomeSettings(settings)
        setFeaturedHotels(featured.hotels || [])
        setFeaturedResorts(featured.resorts || [])
        
        // Organize page content by section
        const contentMap = content.reduce((acc: any, item: any) => {
          acc[item.section] = item
          return acc
        }, {})
        setPageContent(contentMap)
        
        setError(null)
      } catch (err) {
        console.error('[D\'Mar] Failed to load home page data:', err)
        setError('Unable to load home page content. Please refresh the page.')
      } finally {
        setLoading(false)
        console.log('[D\'Mar] Loading complete')
      }
    }
    fetchHomeData()
  }, [])

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen bg-gradient-to-br from-cyan-50 via-blue-50 to-teal-50">
        <div className="text-center">
          <Loader2 className="h-12 w-12 animate-spin text-cyan-600 mx-auto mb-4" />
          <p className="text-gray-600 font-medium">Loading D'Mar Travels...</p>
        </div>
      </div>
    )
  }

  if (error) {
    return (
      <div className="flex items-center justify-center min-h-screen bg-gradient-to-br from-cyan-50 via-blue-50 to-teal-50 p-4">
        <Card className="p-8 max-w-md bg-white/60 backdrop-blur-sm border-white/20">
          <h2 className="text-2xl font-bold text-red-600 mb-4">Unable to Load Page</h2>
          <p className="text-gray-600 mb-6">{error}</p>
          <Button onClick={() => window.location.reload()} className="w-full bg-cyan-600 hover:bg-cyan-700">
            Retry
          </Button>
        </Card>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-cyan-50 via-blue-50 to-teal-50">
      {/* Navigation */}
      <nav className="fixed top-0 w-full z-50 backdrop-blur-md bg-white/10 border-b border-white/20">
        <div className="container mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <Link href="/" className="flex items-center space-x-2 hover:opacity-80 transition-opacity">
              <img src="/dmar-logo-final.png" alt="D'Mar Travels Logo" className="h-10 w-auto" />
              <span className="text-2xl font-bold text-gray-800">D'Mar</span>
            </Link>

            {/* Desktop Navigation */}
            <div className="hidden md:flex items-center space-x-8">
              <div className="relative group">
                <button className="hover:text-cyan-600 transition-colors flex items-center text-slate-900">
                  {t("services")}
                  <svg className="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div className="absolute top-full left-0 mt-2 w-48 bg-white/95 backdrop-blur-md rounded-lg shadow-lg border border-white/20 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <Link
                    href="/services/diving"
                    className="block px-4 py-3 text-gray-700 hover:text-cyan-600 hover:bg-cyan-50/50 transition-colors"
                  >
                    Ocean Excursions
                  </Link>
                  <Link
                    href="/services/fishing"
                    className="block px-4 py-3 text-gray-700 hover:text-cyan-600 hover:bg-cyan-50/50 transition-colors"
                  >
                    Fishing Trips
                  </Link>
                  <Link
                    href="/services/excursions"
                    className="block px-4 py-3 text-gray-700 hover:text-cyan-600 hover:bg-cyan-50/50 transition-colors"
                  >
                    Group Adventures
                  </Link>
                </div>
              </div>
              <Link href="/hotels" className="hover:text-cyan-600 transition-colors text-slate-900">
                {t("hotels")}
              </Link>
              <Link href="/resorts" className="hover:text-cyan-600 transition-colors text-slate-900">
                {t("resorts")}
              </Link>
              <Link href="#about" className="hover:text-cyan-600 transition-colors text-slate-900">
                {t("about")}
              </Link>
              <Link href="#contact" className="hover:text-cyan-600 transition-colors text-slate-900">
                {t("contact")}
              </Link>
              <LanguageSwitcher />
              <Link href="/booking">
                <Button className="bg-cyan-600 hover:bg-cyan-700 text-white">{t("bookNow")}</Button>
              </Link>
            </div>

            {/* Mobile Navigation */}
            <div className="md:hidden flex items-center space-x-2">
              <LanguageSwitcher />
              <Sheet open={mobileMenuOpen} onOpenChange={setMobileMenuOpen}>
                <SheetTrigger asChild>
                  <Button variant="ghost" size="sm" className="text-gray-700 hover:text-cyan-600">
                    <Menu className="h-6 w-6" />
                  </Button>
                </SheetTrigger>
                <SheetContent
                  side="right"
                  className="w-[320px] bg-white/90 backdrop-blur-xl border-white/20"
                >
                  <div className="flex flex-col space-y-6 mt-8">
                    <Link
                      href="/"
                      className="flex items-center space-x-2 mb-4"
                      onClick={() => setMobileMenuOpen(false)}
                    >
                      <img src="/dmar-logo-final.png" alt="D'Mar Travels" className="h-8 w-auto" />
                      <span className="text-xl font-bold text-gray-800">D'Mar</span>
                    </Link>

                    <div className="space-y-4">
                      <div>
                        <h3 className="font-semibold text-gray-800 mb-2">Services</h3>
                        <div className="space-y-2 pl-4">
                          <Link
                            href="/services/diving"
                            className="block text-gray-700 hover:text-cyan-600"
                            onClick={() => setMobileMenuOpen(false)}
                          >
                            Ocean Excursions
                          </Link>
                          <Link
                            href="/services/fishing"
                            className="block text-gray-700 hover:text-cyan-600"
                            onClick={() => setMobileMenuOpen(false)}
                          >
                            Fishing Trips
                          </Link>
                          <Link
                            href="/services/excursions"
                            className="block text-gray-700 hover:text-cyan-600"
                            onClick={() => setMobileMenuOpen(false)}
                          >
                            Group Adventures
                          </Link>
                        </div>
                      </div>
                      <Link
                        href="/hotels"
                        className="block text-gray-700 hover:text-cyan-600"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        {t("hotels")}
                      </Link>
                      <Link
                        href="/resorts"
                        className="block text-gray-700 hover:text-cyan-600"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        {t("resorts")}
                      </Link>
                      <Link
                        href="#about"
                        className="block text-gray-700 hover:text-cyan-600"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        {t("about")}
                      </Link>
                      <Link
                        href="#contact"
                        className="block text-gray-700 hover:text-cyan-600"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        {t("contact")}
                      </Link>
                      <Link href="/booking" onClick={() => setMobileMenuOpen(false)}>
                        <Button className="w-full bg-cyan-600 hover:bg-cyan-700 text-white">
                          {t("bookNow")}
                        </Button>
                      </Link>
                    </div>
                  </div>
                </SheetContent>
              </Sheet>
            </div>
          </div>
        </div>
      </nav>

      {/* Hero Section */}
      <section className="relative min-h-screen flex items-center justify-center overflow-hidden bg-gray-900">
        <div className="absolute inset-0 w-full h-full">
          {/* Always load image first as base layer */}
          {homeSettings?.hero_image_url && (
            <img 
              src={homeSettings.hero_image_url.startsWith('http') ? homeSettings.hero_image_url : `http://localhost:8000/storage/${homeSettings.hero_image_url}`}
              alt="D'Mar Travels Hero" 
              onLoad={() => console.log('Hero image loaded successfully')}
              onError={(e) => {
                console.error('Hero image failed to load:', homeSettings.hero_image_url)
              }}
              className="w-full h-full object-cover" 
            />
          )}
          
          {/* Video overlay if available */}
          {homeSettings?.hero_video_url && (
            <video 
              src={homeSettings.hero_video_url.startsWith('http') ? homeSettings.hero_video_url : `http://localhost:8000/storage/${homeSettings.hero_video_url}`}
              autoPlay 
              loop 
              muted 
              playsInline
              preload="auto"
              onLoadedData={() => console.log('Hero video loaded and playing')}
              onError={(e) => {
                console.error('Hero video failed to load:', homeSettings.hero_video_url)
              }}
              className="absolute inset-0 w-full h-full object-cover" 
            />
          )}
          
          {/* Fallback gradient if no media */}
          {!homeSettings?.hero_video_url && !homeSettings?.hero_image_url && (
            <div className="w-full h-full bg-gradient-to-br from-cyan-600 to-blue-800" />
          )}
        </div>
        <div className="absolute inset-0 bg-gradient-to-b from-black/30 via-black/40 to-black/50" />

        <div className="relative z-10 text-center px-4 max-w-4xl mx-auto">
          <Badge className="mb-6 bg-cyan-800/80 text-white border-cyan-700 backdrop-blur-sm">
            {t("oceanAdventures")}
          </Badge>
          <h1 className="text-4xl md:text-7xl font-bold text-white mb-6 drop-shadow-2xl">
            {homeSettings?.hero_title || "Welcome to D'Mar Travels"}
          </h1>
          <p className="text-xl md:text-2xl text-white/90 mb-8 drop-shadow-lg">
            {homeSettings?.hero_subtitle || "Discover the soul of the Maldives"}
          </p>
          <div className="flex flex-col sm:flex-row gap-4 justify-center">
            <Link href="/booking">
              <Button size="lg" className="bg-cyan-600 hover:bg-cyan-700 text-white text-lg px-8">
                <Calendar className="mr-2 h-5 w-5" />
                {homeSettings?.hero_cta_text || t("bookNow")}
              </Button>
            </Link>
            <Link href="#about">
              <Button size="lg" variant="outline" className="bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white border-white/30 text-lg px-8">
                <Heart className="mr-2 h-5 w-5" />
                {homeSettings?.hero_secondary_cta_text || t("learnMore")}
              </Button>
            </Link>
          </div>
        </div>
      </section>

      {/* Services Section */}
      {homeSettings?.show_services_section !== false && (
        <section className="py-20 px-4">
          <div className="container mx-auto">
            <div className="text-center mb-16">
              <Badge className="mb-6 bg-cyan-100 text-cyan-800">{t("ourServices")}</Badge>
              <h2 className="text-3xl md:text-5xl font-bold text-gray-800 mb-4">
                {pageContent?.experiences?.title || t("experiencesTitle")}
              </h2>
              <p className="text-xl text-gray-600 max-w-2xl mx-auto">
                {pageContent?.experiences?.description || t("experiencesSubtitle")}
              </p>
            </div>

            <div className="grid md:grid-cols-3 gap-8">
              {pageContent?.experiences?.items?.map((item: any, index: number) => {
                const iconMap: any = { waves: Waves, fish: Fish, users: Users, anchor: Anchor }
                const IconComponent = iconMap[item.icon] || Waves
                const colorMap: any = {
                  0: { border: 'border-cyan-600', text: 'text-cyan-600', hover: 'hover:bg-cyan-50', gradient: 'from-cyan-900/80', iconColor: 'text-cyan-300' },
                  1: { border: 'border-blue-600', text: 'text-blue-600', hover: 'hover:bg-blue-50', gradient: 'from-blue-900/80', iconColor: 'text-blue-300' },
                  2: { border: 'border-teal-600', text: 'text-teal-600', hover: 'hover:bg-teal-50', gradient: 'from-teal-900/80', iconColor: 'text-teal-300' },
                }
                const colors = colorMap[index] || colorMap[0]
                
                return (
                  <Card key={index} className="group hover:shadow-2xl transition-all duration-300 bg-white/60 backdrop-blur-sm border-white/20 overflow-hidden">
                    <div className="relative h-64 overflow-hidden">
                      {item.image_url ? (
                        <img src={item.image_url} alt={item.title} className="w-full h-full object-cover" />
                      ) : null}
                      <div className={`absolute inset-0 bg-gradient-to-t ${colors.gradient} to-transparent`} />
                      <div className="absolute bottom-4 left-4">
                        <IconComponent className={`h-12 w-12 ${colors.iconColor}`} />
                      </div>
                    </div>
                    <div className="p-6">
                      <h3 className="text-2xl font-bold text-gray-800 mb-3">{item.title}</h3>
                      <p className="text-gray-600 mb-4">{item.description}</p>
                      {item.features && item.features.length > 0 && (
                        <ul className="mb-4 space-y-1">
                          {item.features.slice(0, 3).map((feature: string, i: number) => (
                            <li key={i} className="text-sm text-gray-500 flex items-center">
                              <span className="mr-2">•</span>{feature}
                            </li>
                          ))}
                        </ul>
                      )}
                      <Link href={`/services/${item.icon === 'waves' ? 'diving' : item.icon === 'fish' ? 'fishing' : 'excursions'}`}>
                        <Button variant="outline" className={`w-full ${colors.border} ${colors.text} ${colors.hover}`}>
                          Explore
                        </Button>
                      </Link>
                    </div>
                  </Card>
                )
              })}
            </div>
          </div>
        </section>
      )}

      {/* Accommodations Section */}
      {homeSettings?.show_accommodations_section !== false && (
        <section className="py-20 px-4 bg-gradient-to-br from-blue-50 to-cyan-50">
          <div className="container mx-auto">
            <div className="text-center mb-16">
              <Badge className="mb-6 bg-blue-100 text-blue-800">Accommodations</Badge>
              <h2 className="text-3xl md:text-5xl font-bold text-gray-800 mb-4">
                Featured Islands & Resorts
              </h2>
              <p className="text-xl text-gray-600 max-w-2xl mx-auto">
                Authentic local island experiences and luxury resort getaways
              </p>
            </div>

            {/* Featured Hotels */}
            {featuredHotels.length > 0 && (
              <div className="mb-16">
                <h3 className="text-2xl font-bold text-gray-800 mb-8 text-center">Local Islands</h3>
                <div className="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                  {featuredHotels.slice(0, 4).map((hotel: any) => (
                    <Card key={hotel.id} className="group overflow-hidden bg-white/60 backdrop-blur-sm border-white/20 hover:shadow-xl transition-all">
                      <div className="relative h-48 overflow-hidden">
                        <img 
                          src={hotel.image_url || '/hotel-placeholder.jpg'} 
                          alt={hotel.name}
                          className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <Badge className="absolute top-3 right-3 bg-cyan-600 text-white">
                          ${hotel.price_per_night}/night
                        </Badge>
                      </div>
                      <div className="p-4">
                        <h4 className="font-bold text-gray-800 mb-2">{hotel.name}</h4>
                        <p className="text-sm text-gray-600 mb-3 line-clamp-2">{hotel.description || 'Experience authentic Maldivian hospitality'}</p>
                        <div className="flex items-center justify-between">
                          <span className="text-sm text-gray-500 flex items-center">
                            <MapPin className="h-3 w-3 mr-1" />
                            {hotel.location || 'Maldives'}
                          </span>
                          <Link href="/hotels">
                            <Button size="sm" variant="outline" className="border-cyan-600 text-cyan-600 hover:bg-cyan-50">
                              View
                            </Button>
                          </Link>
                        </div>
                      </div>
                    </Card>
                  ))}
                </div>
                <div className="text-center mt-8">
                  <Link href="/hotels">
                    <Button className="bg-cyan-600 hover:bg-cyan-700 text-white">
                      View All Local Islands
                    </Button>
                  </Link>
                </div>
              </div>
            )}

            {/* Featured Resorts */}
            {featuredResorts.length > 0 && (
              <div>
                <h3 className="text-2xl font-bold text-gray-800 mb-8 text-center">Luxury Resorts</h3>
                <div className="grid md:grid-cols-2 gap-8">
                  {featuredResorts.slice(0, 2).map((resort: any) => (
                    <Card key={resort.id} className="group overflow-hidden bg-white/60 backdrop-blur-sm border-white/20 hover:shadow-2xl transition-all">
                      <div className="relative h-80 overflow-hidden">
                        <img 
                          src={resort.image_url || '/resort-placeholder.jpg'} 
                          alt={resort.name}
                          className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <Badge className="absolute top-4 right-4 bg-blue-600 text-white text-lg px-4 py-2">
                          ${resort.price_per_night}/night
                        </Badge>
                        <div className="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-6">
                          <h4 className="text-2xl font-bold text-white mb-2">{resort.name}</h4>
                          <p className="text-white/90 flex items-center">
                            <MapPin className="h-4 w-4 mr-2" />
                            {resort.location || 'Maldives'}
                          </p>
                        </div>
                      </div>
                      <div className="p-6">
                        <p className="text-gray-600 mb-4">{resort.description || 'Luxury paradise awaits with world-class amenities'}</p>
                        <Link href="/resorts">
                          <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white">
                            Explore Resort
                          </Button>
                        </Link>
                      </div>
                    </Card>
                  ))}
                </div>
                <div className="text-center mt-8">
                  <Link href="/resorts">
                    <Button className="bg-blue-600 hover:bg-blue-700 text-white">
                      View All Resorts
                    </Button>
                  </Link>
                </div>
              </div>
            )}
          </div>
        </section>
      )}

      {/* Group Trips Section */}
      {homeSettings?.show_group_trips_section !== false && (
        <section className="py-20 px-4">
          <div className="container mx-auto">
            <div className="text-center mb-16">
              <Badge className="mb-6 bg-pink-100 text-pink-800">ALUNA Women's Retreats</Badge>
              <h2 className="text-3xl md:text-5xl font-bold text-gray-800 mb-4">
                {pageContent?.group_trips?.title || "Soul-Focused Group Travels"}
              </h2>
              <p className="text-xl text-gray-600 max-w-2xl mx-auto">
                {pageContent?.group_trips?.description || "Join our transformational women-only retreats and mixed group adventures"}
              </p>
            </div>

            <div className="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
              {pageContent?.group_trips?.items?.map((trip: any, index: number) => {
                const colorMap: any = {
                  pink: { bg: 'bg-pink-600', hover: 'hover:bg-pink-700', gradient: 'from-pink-900/70', badge: 'bg-pink-600' },
                  blue: { bg: 'bg-blue-600', hover: 'hover:bg-blue-700', gradient: 'from-blue-900/70', badge: 'bg-blue-600' },
                  teal: { bg: 'bg-teal-600', hover: 'hover:bg-teal-700', gradient: 'from-teal-900/70', badge: 'bg-teal-600' },
                  cyan: { bg: 'bg-cyan-600', hover: 'hover:bg-cyan-700', gradient: 'from-cyan-900/70', badge: 'bg-cyan-600' },
                }
                const colors = colorMap[trip.color] || colorMap['teal']
                
                return (
                  <Card key={index} className="overflow-hidden bg-white/60 backdrop-blur-sm border-white/20 hover:shadow-2xl transition-all">
                    <div className="relative h-64">
                      {trip.image_url && (
                        <img src={trip.image_url} alt={trip.name} className="w-full h-full object-cover" />
                      )}
                      <div className={`absolute inset-0 bg-gradient-to-t ${colors.gradient} to-transparent`} />
                      {trip.tag && (
                        <Badge className={`absolute top-4 left-4 ${colors.badge} text-white`}>{trip.tag}</Badge>
                      )}
                    </div>
                    <div className="p-8">
                      <h3 className="text-2xl font-bold text-gray-800 mb-4">{trip.name}</h3>
                      <p className="text-gray-600 mb-6">{trip.description}</p>
                      {trip.highlights && trip.highlights.length > 0 && (
                        <ul className="mb-6 space-y-2">
                          {trip.highlights.map((highlight: string, i: number) => (
                            <li key={i} className="text-sm text-gray-500 flex items-center">
                              <span className="mr-2">✓</span>{highlight}
                            </li>
                          ))}
                        </ul>
                      )}
                      <Link href="/booking">
                        <Button className={`w-full ${colors.bg} ${colors.hover} text-white`}>
                          {trip.tag?.includes('Women') ? <Heart className="mr-2 h-5 w-5" /> : <Users className="mr-2 h-5 w-5" />}
                          {trip.tag?.includes('Women') ? 'Join Next Retreat' : 'View Trips'}
                        </Button>
                      </Link>
                    </div>
                  </Card>
                )
              })}
            </div>
          </div>
        </section>
      )}

      {/* About Section */}
      <section id="about" className="py-20 px-4 bg-gradient-to-br from-cyan-50 to-blue-50">
        <div className="container mx-auto max-w-6xl">
          <div className="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <Badge className="mb-6 bg-cyan-100 text-cyan-800">{t("about")}</Badge>
              <h2 className="text-3xl md:text-5xl font-bold text-gray-800 mb-6">
                {pageContent?.about_us?.title || "About D'Mar Travels"}
              </h2>
              <div className="space-y-4 text-gray-600 text-lg">
                <p>
                  {pageContent?.about_us?.description || "Founded by Daniela Mora, a PADI-certified diving instructor and ocean lover, D'Mar Travels brings authentic Maldivian experiences to conscious travelers."}
                </p>
                <p>
                  Based in Ukulhas, we specialize in soul-focused ocean adventures, women's empowerment retreats, and sustainable island tourism that honors local culture.
                </p>
                <p>
                  Whether you're seeking diving certification, cultural immersion, or transformational group travel, we create experiences that connect you deeply with the ocean's wisdom.
                </p>
              </div>
              <div className="mt-8 flex flex-wrap gap-4">
